<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gui="clr-namespace:dms.gui"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:ad="http://schemas.xceed.com/wpf/xaml/avalondock"
        x:Class="dms.gui.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <ad:DockingManager>
        <ad:LayoutRoot>
            <ad:LayoutPanel>
                <ad:LayoutAnchorablePane DockWidth="300">
                    <ad:LayoutAnchorable Title="Панель Задач">
                        <gui:TaskDirectoryPage BorderThickness="0"/>
                    </ad:LayoutAnchorable>
                </ad:LayoutAnchorablePane>
                <ad:LayoutDocumentPane x:Name="documentPane"/>
            </ad:LayoutPanel>
        </ad:LayoutRoot>
    </ad:DockingManager>
</Window>
